<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="True" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        HorizontalContentAlignment="Center"
        Title="Pipe Sizing Assistant" Width="300" Height="300" Topmost="True"
        >
    <StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="Pressure Loss per 100 Feet of Pipe" HorizontalAlignment="Left"/>
            <TextBox x:Name="pressure_loss_input" HorizontalAlignment="Center" TextWrapping="Wrap" Text="1"  Width="50"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Label Content="Predominent Flush Type Fixture" HorizontalAlignment="Left"/>
            <WrapPanel Orientation="Horizontal"  >
                <RadioButton x:Name="flush_tank_rb" GroupName="flush_type" IsChecked="True" Margin="15,0,0,0">
                    Flush Tank
                </RadioButton>
                <RadioButton x:Name="flush_valve_rb" GroupName="flush_type" Margin="15,0,0,0">
                    Flush Valve
                </RadioButton>
            </WrapPanel>
        </StackPanel>
        <Button Click="start_sizing" Content="Start Sizing"/>
    </StackPanel>
</Window>